<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_default_dia_loading_size"
    android:layout_height="@dimen/dp_default_dia_loading_size"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_default_dia_loading_size"
        android:layout_height="@dimen/dp_default_dia_loading_size"
        android:background="@drawable/bg_round_white_10"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_defualt_dia_loading_id"
            android:layout_width="@dimen/dp_default_dia_loading_img_size"
            android:layout_height="@dimen/dp_default_dia_loading_img_size"
            android:layout_centerInParent="true"
            android:src="@drawable/default_dia_loading"/>

        <TextView
            android:id="@+id/tv_msg_default_dia_loading_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_defualt_dia_loading_id"
            android:layout_marginTop="@dimen/x30"
            android:text="@string/text_default_loading_please_wait"/>

    </RelativeLayout>

</LinearLayout>