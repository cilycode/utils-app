<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/CommonDialogAnimationStyle</item>
    </style>

    <style name="CommonDialogAnimationStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_alpha_out</item>
    </style>

    <style name="style_dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/x30</item>
        <item name="android:textSize">@dimen/dp_textsize_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_default_dia_title</item>
    </style>

    <style name="style_dialog_msg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/dp_default_dia_min_height</item>
        <item name="android:layout_margin">@dimen/x5</item>
        <item name="android:textSize">@dimen/dp_textsize_normal</item>
        <item name="android:textColor">@color/color_default_dia_msg</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="style_dialog_bottom_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/x30</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp_textsize_normal</item>
        <item name="android:textColor">@color/color_default_dia_bottom_btn</item>
    </style>

    <style name="style_dialog_splite_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_light_gray</item>
    </style>

    <style name="style_dialog_splite_line_v">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_light_gray</item>
    </style>
</resources>